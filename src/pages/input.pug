mixin login-form()
    .auth__step.active
        .auth__step-item.success
            .auth__step-input
                input(type="text" placeholder="Логин или Email" autocomplete="username" required).input
                +status-icons 
            p.auth__step-error-p Неверный логин
        .auth__step-item.two-icons.error
            .auth__step-input
                input(type="password" placeholder="Пароль" autocomplete="new-password" required).input.input-password
                button(type="button") 
                    +show-pass-icon
                +status-icons 
            a(href="password-recovery.html").auth__step-label Забыли пароль?
      


