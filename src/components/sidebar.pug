mixin sidebar(status)
    .sidebar
        .sidebar__top
            a(href="#!").sidebar__logo
                if status === 'guest'
                    .sidebar__logo-img
                        img(src="../@img/logo.png", alt="" draggable="false")
                    span.sidebar__logo-p Вход в ЛК
                if status === 'admin'
                    .sidebar__logo-img
                        img(src="../@img/logo.png", alt="" draggable="false")
                    span.sidebar__logo-p Админка
                if status === 'partner'
                    .sidebar__logo-img
                        img(src="../@img/logo.png", alt="" draggable="false")
                    span.sidebar__logo-p Кабинет#[br]Партнера   
            if status === 'partner'
