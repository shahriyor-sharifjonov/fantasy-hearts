mixin auth-step-1()
    .auth__step.auth__step_1.active
        p.auth__step-counter 1 из 4 шаг
        p.auth__step-title Логин и пароль
        p.auth__step-desc Все поля обязательны к заполнению
        .auth__step-item
            .auth__step-input
                input(type="text" placeholder="Ваш логин" autocomplete="username" required).input
                +status-icons
            p.auth__step-success-p Логин не занят
            p.auth__step-error-p Логин занят
            p.auth__step-label до 12 символов
        .auth__step-item.two-icons
            .auth__step-input
                input(type="password" placeholder="Пароль" autocomplete="new-password" required).input.input-password
                button(type="button") 
                    +show-pass-icon
                +status-icons
            p.auth__step-error-p Ненадежный пароль
            p.auth__step-success-p Надежный пароль
            p.auth__step-label минимум 6 символов
        .auth__step-item.two-icons 
            .auth__step-input 
                input(type="password" placeholder="Повторите пароль" autocomplete="new-password" required).input.input-password
                button(type="button") 
                    +show-pass-icon
                +status-icons 
            p.auth__step-error-p Пароли не совпадають 
            p.auth__step-success-p Надежный пароль 

mixin auth-step-2()
    .auth__step.auth__step_2
        p.auth__step-counter 2 из 4 шаг
        p.auth__step-title Контакты партнера
        p.auth__step-desc Все поля обязательны к заполнению
        .auth__step-item
            .auth__step-input
                input(type="text" placeholder="Фамилия Имя Отчество" required).input
                +status-icons 
            p.auth__step-error-p Введите данные
        .auth__step-item
            .auth__step-input
                input(type="text" placeholder="Индекс и полный адрес" required).input
                +status-icons 
            p.auth__step-error-p Введите данные
        p.auth__step-p Укажите ссылки на все сайты, социальные сети, если вы блоггер – предоставьте ссылки на ваши каналы, аккаунты в социальных сетях. Максимально подробно опишите способ привлечения игроков.
        .auth__step-item 
            .auth__step-input 
                textarea(rows="6" placeholder="Источники трафика" required).input
                +status-icons 
            p.auth__step-error-p Введите данные 

