            <path d="M10 6.29443C10 7.63838 8.07373 8.08635 8.07373 8.98232" stroke="#6A7C7B" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M6 6.29453C6.06047 5.24895 6.95387 4.44841 7.99979 4.5026C9.04571 4.44841 9.9391 5.24895 9.99958 6.29453" stroke="#6A7C7B" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    .tooltip__content 
        p #{text} 

mixin tooltip(text, classList)
    if classList === 'left'
        div(class="tooltip left")
            +tooltip-body(text)
    if classList === 'center'
        div(class="tooltip center")
            +tooltip-body(text)
    if classList === 'right'
        div(class="tooltip right")
            +tooltip-body(text)
        
